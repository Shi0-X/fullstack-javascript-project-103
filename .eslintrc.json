{
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-multi-spaces": ["error", { "ignoreEOLComments": false }],
      "no-trailing-spaces": "error", // Elimina espacios en blanco al final de las líneas
      "indent": ["error", 2], // Asegura una indentación consistente de 2 espacios
      "max-len": ["error", { "code": 80 }] // Limita la longitud de las líneas a 80 caracteres
    }
  }
  